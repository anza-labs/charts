{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "area/dependency"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "deprecated/**"
  ],
  "packageRules": [
    {
      "groupName": "kamaji dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "charts/kamaji/**"
      ]
    },
    {
      "groupName": "lubelogger dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "charts/lubelogger/**"
      ]
    },
    {
      "groupName": "pocket-id dependencies",
      "matchDatasources": [
        "docker"
      ],
      "matchFileNames": [
        "charts/pocket-id/**"
      ]
    },
    {
      "automerge": false,
      "matchManagers": [
        "helm-values"
      ],
      "labels": [
        "area/dependency",
        "do-not-merge"
      ]
    },
    {
      "automerge": false,
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "area/dependency",
        "do-not-merge"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "docker.io/clastix/kamaji"
      ],
      "versioning": "regex:^edge-(?<major>\\d{2})\\.(?<minor>\\d{1,2})\\.(?<patch>\\d{1,2})$"
    }
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "area/dependency",
      "kind/security"
    ]
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kind.yaml$/"
      ],
      "matchStrings": [
        "\\s+image:\\s(?<depName>.*?):(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/values.yaml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s+version:\\s(?<currentValue>\\S+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Makefile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s[A-Z_]+\\s\\?=\\s(?<currentValue>\\S+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
